{% comment %}
  Section: Center sticky image + floating benefits (VISIBLE) behind the image
  - Benefits are positioned via X/Y per block
  - Benefits are ultra visible (opacity default 100)
  - Benefits sit behind the image (z-index), NOT behind background
  - Image scales slightly on scroll, text follows subtly
  - Shopify-safe schema (opacity as 0..100 ints)
{% endcomment %}

<section class="bfz2" id="bfz2-{{ section.id }}" style="
  --bg: {{ section.settings.bg_color }};
  --text: {{ section.settings.text_color }};
  --sub: {{ section.settings.sub_color }};
  --max: {{ section.settings.max_scale }};
  --imgW: {{ section.settings.image_max_width }}px;
  --padY: {{ section.settings.padding_y }}px;
  --p: 0;
">
  <div class="bfz2__wrap">
    {% if section.settings.title != blank %}
      <h2 class="bfz2__title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="bfz2__stage">
      <!-- Benefits layer: visible, but behind image -->
      <div class="bfz2__benefits" aria-label="Bénéfices">
        {% for block in section.blocks %}
          {% if block.type == 'benefit' %}
            <div
              class="bfz2__benefit"
              data-bfz2-item
              style="
                --x: {{ block.settings.x_offset }}px;
                --y: {{ block.settings.y_offset }}px;
                --fs: {{ block.settings.font_size }}px;
                --op: {{ block.settings.opacity }};
                --follow: {{ block.settings.follow_strength }};
                --align: {{ block.settings.align }};
              "
              {{ block.shopify_attributes }}
            >
              <div class="bfz2__inner bfz2__inner--{{ block.settings.align }}">
                <div class="bfz2__h">{{ block.settings.heading }}</div>
                {% if block.settings.text != blank %}
                  <div class="bfz2__p">{{ block.settings.text }}</div>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Image layer: above benefits -->
      <div class="bfz2__center">
        <div class="bfz2__sticky">
          {% if section.settings.image != blank %}
            <img
              src="{{ section.settings.image | image_url: width: 1100 }}"
              alt="{{ section.settings.image_alt | escape }}"
              loading="lazy"
              class="bfz2__img"
            >
          {% else %}
            <div class="bfz2__ph">Ajoute l'image produit</div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <script>
    (function(){
      const root = document.getElementById("bfz2-{{ section.id }}");
      if (!root) return;

      const img = root.querySelector(".bfz2__img");
      if (!img) return;

      const items = root.querySelectorAll("[data-bfz2-item]");
      if (!items.length) return;

      function clamp(n,a,b){ return Math.max(a, Math.min(b,n)); }

      // Progress based on how much the section is in view (stable + predictable)
      function update(){
        const r = root.getBoundingClientRect();
        const vh = window.innerHeight || document.documentElement.clientHeight;

        // 0 when section is below viewport, 1 when centered-ish
        const start = vh * 0.85;
        const end   = vh * 0.15;
        const p = (start - r.top) / (start - end);
        const prog = clamp(p, 0, 1);

        root.style.setProperty("--p", prog.toFixed(3));

        const max = parseFloat(getComputedStyle(root).getPropertyValue("--max")) || 1.1;
        const scale = 1 + (max - 1) * prog;
        img.style.transform = "scale(" + scale.toFixed(3) + ")";
      }

      window.addEventListener("scroll", update, { passive: true });
      window.addEventListener("resize", update);
      update();
    })();
  </script>
</section>

<style>
  .bfz2{
    background: var(--bg);
    color: var(--text);
    padding: var(--padY) 0;
    overflow: hidden;
  }
  .bfz2__wrap{
    max-width: 1180px;
    margin: 0 auto;
    padding: 0 16px;
  }
  .bfz2__title{
    text-align: center;
    margin: 0 0 28px;
    font-weight: 900;
    letter-spacing: .01em;
  }

  /* Stage: we give it height so positions have room */
  .bfz2__stage{
    position: relative;
    min-height: 560px;
  }

  /* Benefits: visible layer (NOT behind background), but behind image */
  .bfz2__benefits{
    position: absolute;
    inset: 0;
    z-index: 2;         /* behind image (3), above bg */
    pointer-events: none;
  }

  .bfz2__benefit{
    position: absolute;
    left: 50%;
    top: 50%;
    opacity: calc(var(--op) / 100);
    transform:
      translate(-50%, -50%)
      translate(var(--x), var(--y))
      /* subtle follow */
      translate(calc(var(--p) * var(--follow) * 1px), calc(var(--p) * var(--follow) * -0.55px));
    transition: transform 120ms linear;
  }

  .bfz2__inner{
    max-width: 300px;
    /* Make it ULTRA readable on nocturne */
    text-shadow: 0 3px 18px rgba(0,0,0,.55);
  }
  .bfz2__inner--left{ text-align: left; }
  .bfz2__inner--right{ text-align: right; }
  .bfz2__inner--center{ text-align: center; }

  .bfz2__h{
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: .10em;
    font-size: var(--fs);
    line-height: 1.12;
  }
  .bfz2__p{
    margin-top: 10px;
    color: var(--sub);
    font-size: calc(var(--fs) - 3px);
    line-height: 1.45;
  }

  /* Image layer above benefits */
  .bfz2__center{
    position: relative;
    z-index: 3; /* above benefits */
    display: flex;
    justify-content: center;
  }

  .bfz2__sticky{
    position: sticky;
    top: 120px;
    width: 100%;
    max-width: var(--imgW);
    aspect-ratio: 1 / 1;
    display: grid;
    place-items: center;
    pointer-events: none;
  }

  .bfz2__img{
    width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
    transform: scale(1);
    transform-origin: center;
    transition: transform 140ms linear;
  }

  .bfz2__ph{
    width: 100%;
    height: 320px;
    border-radius: 22px;
    border: 1px dashed color-mix(in srgb, var(--text) 18%, transparent);
    display: grid;
    place-items: center;
    opacity: .7;
  }

  @media (max-width: 900px){
    .bfz2__stage{ min-height: 620px; }
    .bfz2__sticky{ top: 88px; max-width: 240px; }
    .bfz2__inner{ max-width: 190px; }
  }

  @media (prefers-reduced-motion: reduce){
    .bfz2__benefit{ transition: none; }
    .bfz2__img{ transition: none; }
  }
</style>

{% schema %}
{
  "name": "Bénéfices overlay",
  "settings": [
    { "type": "text", "id": "title", "label": "Titre", "default": "Pourquoi HUSHA ?" },

    { "type": "image_picker", "id": "image", "label": "Image produit" },
    { "type": "text", "id": "image_alt", "label": "ALT", "default": "Bouchon anti-bruit" },

    { "type": "color", "id": "bg_color", "label": "Fond", "default": "#0B1220" },
    { "type": "color", "id": "text_color", "label": "Couleur titre", "default": "#E5E7EB" },
    { "type": "color", "id": "sub_color", "label": "Couleur texte", "default": "#CBD5E1" },

    {
      "type": "range",
      "id": "padding_y",
      "label": "Padding vertical (px)",
      "min": 20,
      "max": 140,
      "step": 4,
      "default": 56
    },
    {
      "type": "range",
      "id": "image_max_width",
      "label": "Taille image max (px)",
      "min": 200,
      "max": 560,
      "step": 10,
      "default": 340
    },
    {
      "type": "range",
      "id": "max_scale",
      "label": "Zoom image max",
      "min": 1.0,
      "max": 1.6,
      "step": 0.1,
      "default": 1.1
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Bénéfice",
      "settings": [
        { "type": "text", "id": "heading", "label": "Titre", "default": "Confort longue durée" },
        { "type": "text", "id": "text", "label": "Texte", "default": "Embouts doux, agréable plusieurs heures." },

        {
          "type": "select",
          "id": "align",
          "label": "Alignement",
          "options": [
            { "value": "left", "label": "Gauche" },
            { "value": "center", "label": "Centre" },
            { "value": "right", "label": "Droite" }
          ],
          "default": "left"
        },

        { "type": "number", "id": "x_offset", "label": "Position X (px)", "default": -320 },
        { "type": "number", "id": "y_offset", "label": "Position Y (px)", "default": -140 },

        {
          "type": "range",
          "id": "font_size",
          "label": "Taille titre (px)",
          "min": 14,
          "max": 42,
          "step": 1,
          "default": 22
        },
        {
          "type": "range",
          "id": "opacity",
          "label": "Opacité (0-100)",
          "min": 30,
          "max": 100,
          "step": 5,
          "default": 100
        },
        {
          "type": "range",
          "id": "follow_strength",
          "label": "Suivi (px)",
          "min": 0,
          "max": 120,
          "step": 2,
          "default": 18
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bénéfices overlay",
      "blocks": [
        { "type": "benefit" },
        { "type": "benefit" },
        { "type": "benefit" },
        { "type": "benefit" }
      ]
    }
  ]
}
{% endschema %}
