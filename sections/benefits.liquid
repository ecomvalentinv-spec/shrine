{% comment %}
  Section: Sticky center product + benefits left/right + subtle zoom on scroll
  - TEXT ONLY benefits (no dots)
  - Center product stays sticky and scales slightly as benefits scroll
{% endcomment %}

<section class="bsz" id="bsz-{{ section.id }}" style="
  --bg: {{ section.settings.bg_color }};
  --text: {{ section.settings.text_color }};
  --muted: {{ section.settings.muted_color }};
  --max: {{ section.settings.max_scale }};
">
  <div class="bsz__wrap">
    {% if section.settings.title != blank %}
      <h2 class="bsz__title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="bsz__grid">
      <!-- LEFT -->
      <div class="bsz__col bsz__col--left">
        {% for block in section.blocks %}
          {% if block.type == 'benefit' and block.settings.side == 'left' %}
            <article class="bsz__item" data-bsz-item {{ block.shopify_attributes }}>
              <p class="bsz__h">{{ block.settings.heading }}</p>
              {% if block.settings.text != blank %}
                <p class="bsz__p">{{ block.settings.text }}</p>
              {% endif %}
            </article>
          {% endif %}
        {% endfor %}
      </div>

      <!-- CENTER -->
      <div class="bsz__center">
        <div class="bsz__sticky">
          {% if section.settings.image != blank %}
            <img
              src="{{ section.settings.image | image_url: width: 900 }}"
              alt="{{ section.settings.image_alt | escape }}"
              loading="lazy"
              class="bsz__img"
              id="bsz-img-{{ section.id }}"
            >
          {% else %}
            <div class="bsz__ph">Ajoute l'image produit</div>
          {% endif %}
        </div>
      </div>

      <!-- RIGHT -->
      <div class="bsz__col bsz__col--right">
        {% for block in section.blocks %}
          {% if block.type == 'benefit' and block.settings.side == 'right' %}
            <article class="bsz__item bsz__item--right" data-bsz-item {{ block.shopify_attributes }}>
              <p class="bsz__h">{{ block.settings.heading }}</p>
              {% if block.settings.text != blank %}
                <p class="bsz__p">{{ block.settings.text }}</p>
              {% endif %}
            </article>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>

  <script>
    (function(){
      const root = document.getElementById("bsz-{{ section.id }}");
      if (!root) return;

      const img = root.querySelector(".bsz__img");
      if (!img) return;

      const items = root.querySelectorAll("[data-bsz-item]");
      if (!items.length) return;

      function clamp(n, a, b){ return Math.max(a, Math.min(b, n)); }

      // Scale based on the benefit currently closest to viewport center
      function update(){
        const vh = window.innerHeight || document.documentElement.clientHeight;

        let best = 0; // 0..1
        items.forEach(el => {
          const r = el.getBoundingClientRect();
          const mid = r.top + r.height/2;
          const dist = Math.abs(vh*0.5 - mid);
          const local = 1 - clamp(dist / (vh*0.45), 0, 1);
          if (local > best) best = local;
        });

        const max = parseFloat(getComputedStyle(root).getPropertyValue("--max")) || 1.1;
        const scale = 1 + (max - 1) * best;

        img.style.transform = "scale(" + scale.toFixed(3) + ")";
      }

      window.addEventListener("scroll", update, { passive: true });
      window.addEventListener("resize", update);
      update();
    })();
  </script>
</section>

<style>
  .bsz{
    background: var(--bg);
    color: var(--text);
    padding: 56px 0;
  }
  .bsz__wrap{
    max-width: 1180px;
    margin: 0 auto;
    padding: 0 16px;
  }
  .bsz__title{
    text-align: center;
    margin: 0 0 34px;
    font-weight: 900;
    letter-spacing: .01em;
  }

  /* Desktop: 3 columns (left / sticky center / right) */
  .bsz__grid{
    display: grid;
    grid-template-columns: 1fr minmax(240px, 360px) 1fr;
    gap: 26px;
    align-items: start;
  }

  .bsz__col{
    display: flex;
    flex-direction: column;
    gap: 22px;
    padding-top: 12px;
    z-index: 2; /* keep text above center if needed */
  }

  .bsz__center{
    display: flex;
    justify-content: center;
    z-index: 1;
  }

  /* Sticky product: stays centered while you scroll benefits */
  .bsz__sticky{
    position: sticky;
    top: 120px;
    width: 100%;
    max-width: 340px;
    aspect-ratio: 1 / 1;
    display: grid;
    place-items: center;
    pointer-events: none;
  }

  .bsz__img{
    width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
    transform: scale(1);
    transform-origin: center;
    transition: transform 140ms linear;
  }

  .bsz__ph{
    width: 100%;
    height: 320px;
    border-radius: 22px;
    border: 1px dashed color-mix(in srgb, var(--text) 18%, transparent);
    display: grid;
    place-items: center;
    opacity: .7;
  }

  /* Benefits: text-only, premium */
  .bsz__item{
    padding: 2px 0;
  }

  .bsz__h{
    margin: 0;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: .10em;
    font-size: 13px;
    line-height: 1.25;
  }
  .bsz__p{
    margin: 7px 0 0;
    color: var(--muted);
    font-size: 13px;
    line-height: 1.5;
  }

  .bsz__item--right,
  .bsz__col--right{
    text-align: right;
  }

  /* Mobile: keep "sides" using 2 columns for benefits + sticky product above */
  @media (max-width: 900px){
    .bsz{ padding: 34px 0; }

    .bsz__grid{
      grid-template-columns: 1fr 1fr;
      gap: 14px;
      position: relative;
    }

    /* Put product as sticky centered element that doesn't block text */
    .bsz__center{
      grid-column: 1 / -1;
      order: -1;
      position: sticky;
      top: 88px;
      z-index: 0;
      pointer-events: none;
      display: flex;
      justify-content: center;
      margin-bottom: 10px;
    }
    .bsz__sticky{
      max-width: 220px;
      opacity: 0.96;
      top: 88px;
    }

    .bsz__col{
      z-index: 2;
      padding-top: 0;
    }

    .bsz__item--right,
    .bsz__col--right{
      text-align: left; /* meilleure lisibilité mobile */
    }
  }
</style>

{% schema %}
{
  "name": "Bénéfices sticky",
  "settings": [
    { "type": "text", "id": "title", "label": "Titre", "default": "Pourquoi HUSHA ?" },
    { "type": "image_picker", "id": "image", "label": "Image produit" },
    { "type": "text", "id": "image_alt", "label": "ALT", "default": "Bouchon anti-bruit" },

    { "type": "color", "id": "bg_color", "label": "Fond", "default": "#0B1220" },
    { "type": "color", "id": "text_color", "label": "Texte", "default": "#E5E7EB" },
    { "type": "color", "id": "muted_color", "label": "Texte secondaire", "default": "#9CA3AF" },

    {
      "type": "range",
      "id": "max_scale",
      "label": "Zoom max",
      "min": 1.0,
      "max": 1.6,
      "step": 0.1,
      "default": 1.1
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Bénéfice",
      "settings": [
        {
          "type": "select",
          "id": "side",
          "label": "Côté",
          "options": [
            { "value": "left", "label": "Gauche" },
            { "value": "right", "label": "Droite" }
          ],
          "default": "left"
        },
        { "type": "text", "id": "heading", "label": "Titre", "default": "Bénéfice" },
        { "type": "text", "id": "text", "label": "Texte", "default": "Une phrase courte." }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bénéfices sticky",
      "blocks": [
        { "type": "benefit" },
        { "type": "benefit" },
        { "type": "benefit" },
        { "type": "benefit" },
        { "type": "benefit" },
        { "type": "benefit" }
      ]
    }
  ]
}
{% endschema %}
