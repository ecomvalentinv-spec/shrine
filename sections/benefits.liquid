{% comment %}
  Section: Sticky center image + floating benefits (TEXT BACKGROUND)
  - Each benefit block: adjustable X/Y position
  - Text is behind image (z-index)
  - Text follows product movement via scroll progress variable
  - Opacity is 0..100 to satisfy Shopify schema constraints
{% endcomment %}

<section class="bfz" id="bfz-{{ section.id }}" style="
  --bg: {{ section.settings.bg_color }};
  --text: {{ section.settings.text_color }};
  --muted: {{ section.settings.muted_color }};
  --max: {{ section.settings.max_scale }};
  --imgW: {{ section.settings.image_max_width }}px;
  --padY: {{ section.settings.padding_y }}px;
  --p: 0;
">
  <div class="bfz__wrap">
    {% if section.settings.title != blank %}
      <h2 class="bfz__title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="bfz__stage" aria-label="Bénéfices produit">
      <!-- Floating TEXT (background layer) -->
      <div class="bfz__benefits">
        {% for block in section.blocks %}
          {% if block.type == 'benefit' %}
            <div
              class="bfz__benefit"
              data-bfz-item
              style="
                --x: {{ block.settings.x_offset }}px;
                --y: {{ block.settings.y_offset }}px;
                --fs: {{ block.settings.font_size }}px;
                --op: {{ block.settings.opacity }};
                --follow: {{ block.settings.follow_strength }};
                --align: {{ block.settings.align }};
              "
              {{ block.shopify_attributes }}
            >
              <div class="bfz__benefitInner bfz__benefitInner--{{ block.settings.align }}">
                <div class="bfz__h">{{ block.settings.heading }}</div>
                {% if block.settings.text != blank %}
                  <div class="bfz__p">{{ block.settings.text }}</div>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Center image (foreground layer) -->
      <div class="bfz__center">
        <div class="bfz__sticky">
          {% if section.settings.image != blank %}
            <img
              src="{{ section.settings.image | image_url: width: 1000 }}"
              alt="{{ section.settings.image_alt | escape }}"
              loading="lazy"
              class="bfz__img"
              id="bfz-img-{{ section.id }}"
            >
          {% else %}
            <div class="bfz__ph">Ajoute l'image produit</div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <script>
    (function(){
      const root = document.getElementById("bfz-{{ section.id }}");
      if (!root) return;

      const img = root.querySelector(".bfz__img");
      if (!img) return;

      const items = root.querySelectorAll("[data-bfz-item]");
      if (!items.length) return;

      function clamp(n,a,b){ return Math.max(a, Math.min(b,n)); }

      function update(){
        const vh = window.innerHeight || document.documentElement.clientHeight;

        // "best" is the benefit closest to viewport center (0..1)
        let best = 0;
        items.forEach(el => {
          const r = el.getBoundingClientRect();
          const mid = r.top + r.height/2;
          const dist = Math.abs(vh*0.5 - mid);
          const local = 1 - clamp(dist / (vh*0.55), 0, 1);
          if (local > best) best = local;
        });

        root.style.setProperty("--p", best.toFixed(3));

        const max = parseFloat(getComputedStyle(root).getPropertyValue("--max")) || 1.1;
        const scale = 1 + (max - 1) * best;
        img.style.transform = "scale(" + scale.toFixed(3) + ")";
      }

      window.addEventListener("scroll", update, { passive: true });
      window.addEventListener("resize", update);
      update();
    })();
  </script>
</section>

<style>
  .bfz{
    background: var(--bg);
    color: var(--text);
    padding: var(--padY) 0;
    overflow: hidden;
  }
  .bfz__wrap{
    max-width: 1180px;
    margin: 0 auto;
    padding: 0 16px;
  }
  .bfz__title{
    text-align: center;
    margin: 0 0 28px;
    font-weight: 900;
    letter-spacing: .01em;
  }

  .bfz__stage{
    position: relative;
    min-height: 520px;
  }

  /* Background benefits layer */
  .bfz__benefits{
    position: relative;
    z-index: 1; /* behind the image */
    pointer-events: none;
  }

  .bfz__benefit{
    position: absolute;
    left: 50%;
    top: 50%;
    opacity: calc(var(--op) / 100);
    transform:
      translate(-50%, -50%)
      translate(var(--x), var(--y))
      translate(calc(var(--p) * var(--follow) * 1px), calc(var(--p) * var(--follow) * -0.6px));
    transition: transform 120ms linear;
  }

  .bfz__benefitInner{
    max-width: 260px;
  }

  .bfz__benefitInner--left{ text-align: left; }
  .bfz__benefitInner--right{ text-align: right; }
  .bfz__benefitInner--center{ text-align: center; }

  /* Big + bold (premium) */
  .bfz__h{
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: .10em;
    font-size: var(--fs);
    line-height: 1.15;
  }
  .bfz__p{
    margin-top: 10px;
    color: var(--muted);
    font-size: calc(var(--fs) - 4px);
    line-height: 1.45;
    letter-spacing: .01em;
  }

  /* Foreground image layer */
  .bfz__center{
    position: relative;
    z-index: 2;
    display: flex;
    justify-content: center;
  }

  .bfz__sticky{
    position: sticky;
    top: 120px;
    width: 100%;
    max-width: var(--imgW);
    aspect-ratio: 1 / 1;
    display: grid;
    place-items: center;
    pointer-events: none;
  }

  .bfz__img{
    width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
    transform: scale(1);
    transform-origin: center;
    transition: transform 140ms linear;
  }

  .bfz__ph{
    width: 100%;
    height: 320px;
    border-radius: 22px;
    border: 1px dashed color-mix(in srgb, var(--text) 18%, transparent);
    display: grid;
    place-items: center;
    opacity: .7;
  }

  @media (max-width: 900px){
    .bfz__stage{ min-height: 560px; }
    .bfz__benefitInner{ max-width: 180px; }
    .bfz__sticky{ top: 88px; max-width: 240px; }

    .bfz__benefit{
      transform:
        translate(-50%, -50%)
        translate(var(--x), var(--y))
        translate(calc(var(--p) * var(--follow) * 0.6px), calc(var(--p) * var(--follow) * -0.35px));
    }
  }

  @media (prefers-reduced-motion: reduce){
    .bfz__benefit{ transition: none; }
    .bfz__img{ transition: none; }
  }
</style>

{% schema %}
{
  "name": "Bénéfices flottants",
  "settings": [
    { "type": "text", "id": "title", "label": "Titre", "default": "Bénéfices" },

    { "type": "image_picker", "id": "image", "label": "Image produit" },
    { "type": "text", "id": "image_alt", "label": "ALT", "default": "Bouchon anti-bruit" },

    { "type": "color", "id": "bg_color", "label": "Fond", "default": "#0B1220" },
    { "type": "color", "id": "text_color", "label": "Texte", "default": "#E5E7EB" },
    { "type": "color", "id": "muted_color", "label": "Texte secondaire", "default": "#9CA3AF" },

    {
      "type": "range",
      "id": "padding_y",
      "label": "Padding vertical (px)",
      "min": 20,
      "max": 120,
      "step": 4,
      "default": 56
    },
    {
      "type": "range",
      "id": "image_max_width",
      "label": "Taille image max (px)",
      "min": 200,
      "max": 520,
      "step": 10,
      "default": 340
    },
    {
      "type": "range",
      "id": "max_scale",
      "label": "Zoom max",
      "min": 1.0,
      "max": 1.6,
      "step": 0.1,
      "default": 1.1
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Bénéfice",
      "settings": [
        { "type": "text", "id": "heading", "label": "Titre", "default": "Confort longue durée" },
        { "type": "text", "id": "text", "label": "Texte", "default": "Embouts doux, agréable plusieurs heures." },

        {
          "type": "select",
          "id": "align",
          "label": "Alignement texte",
          "options": [
            { "value": "left", "label": "Gauche" },
            { "value": "center", "label": "Centre" },
            { "value": "right", "label": "Droite" }
          ],
          "default": "left"
        },

        { "type": "number", "id": "x_offset", "label": "Position X (px)", "default": -320 },
        { "type": "number", "id": "y_offset", "label": "Position Y (px)", "default": -140 },

        {
          "type": "range",
          "id": "font_size",
          "label": "Taille titre (px)",
          "min": 12,
          "max": 34,
          "step": 1,
          "default": 16
        },
        {
          "type": "range",
          "id": "opacity",
          "label": "Opacité (0-100)",
          "min": 10,
          "max": 100,
          "step": 5,
          "default": 55
        },
        {
          "type": "range",
          "id": "follow_strength",
          "label": "Suivi du mouvement (px)",
          "min": 0,
          "max": 80,
          "step": 2,
          "default": 22
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bénéfices flottants",
      "blocks": [
        { "type": "benefit" },
        { "type": "benefit" },
        { "type": "benefit" },
        { "type": "benefit" }
      ]
    }
  ]
}
{% endschema %}
